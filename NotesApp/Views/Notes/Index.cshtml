@model IEnumerable<NotesApp.Models.Note>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">
    Vytvoř novou poznamku
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NoteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoteDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotePriority)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoteDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotePriority)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

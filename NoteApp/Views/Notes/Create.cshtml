@using Microsoft.AspNetCore.Identity
@using NoteApp.Areas.Identity.Data
@model NoteApp.Models.Note

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NoteDescription" class="control-label"></label>
                <input asp-for="NoteDescription" class="form-control" />
                <span asp-validation-for="NoteDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateStart" class="control-label"></label>
                <input asp-for="DateStart" class="form-control" />
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEnd" class="control-label"></label>
                <input asp-for="DateEnd" class="form-control" />
                <span asp-validation-for="DateEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoteState" class="control-label"></label>
                <select class="form-control" asp-for="NoteState"aria-required="true">
                    <option>Choose state...</option>
                    <option value="Planned">Planned</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Done">Done</option>
                </select>
                <span asp-validation-for="NoteState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="NoteUserId" class="form-control" value="@UserManager.GetUserId(User)" type="hidden" />
                <span asp-validation-for="NoteUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
